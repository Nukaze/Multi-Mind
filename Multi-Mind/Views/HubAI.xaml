<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="Multi_Mind.Views.HubAI"
             Title="AI Hub"
             >

    <ContentPage.Resources>
        <LinearGradientBrush x:Key="GeminiGradientColor" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2160CE" Offset="0"/>
            <GradientStop Color="#5342AE" Offset="0.25"/>
            <GradientStop Color="#673E9E" Offset="0.50"/>
            <GradientStop Color="#983D72" Offset="0.75"/>
            <GradientStop Color="#AA4F52" Offset="1" />
        </LinearGradientBrush>

    </ContentPage.Resources>


    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#282828" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Title header -->
                <Label Grid.Column="0" Grid.ColumnSpan="2"
                   Text="AI Hub" 
                   TextColor="{DynamicResource White}" 
                   FontSize="48" 
                   HorizontalOptions="CenterAndExpand"
                   />
                <Image Grid.Column="2" Grid.ColumnSpan="0"
                   Opacity="1"
                   Source="dotnet_bot"
                   />
            </Grid>

            <Grid Grid.Row="1" Background="#333333" Margin="0">
                <controls:StackLayout Margin="20" Spacing="30">

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                        <ImageButton 
                        Source="chatgpt_icon.png" 
                        HeightRequest="80" 
                        HorizontalOptions="CenterAndExpand"
                        Clicked="ChatGPT_Clicked"
                        />
                        <Button 
                        Text="ChatGPT" 
                        Clicked="ChatGPT_Clicked"
                        HeightRequest="80" 
                        WidthRequest="250"
                        Background="#38965E"
                        TextColor="White" 
                        FontSize="32"
                        FontAttributes="Bold"
                        Margin="10,20,10,20"
                        />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                        <ImageButton 
                        Source="gemini_icon.png" 
                        HeightRequest="80" 
                        HorizontalOptions="StartAndExpand"
                        Clicked="Gemini_Clicked"
                        />
                        <Button Text="Gemini"
                        Clicked="Gemini_Clicked"
                        HeightRequest="80"
                        WidthRequest="250"
                        Background="{DynamicResource GeminiGradientColor}"
                        TextColor="White"
                        FontSize="32"
                        FontAttributes="Bold"
                        Margin="10,20,10,20"
                        
                        />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                        <ImageButton 
                        Source="claude_icon.png" 
                        HeightRequest="80" 
                        HorizontalOptions="StartAndExpand"
                        Clicked="Claude_Clicked"
                        />
                        <Button Text="Claude"
                        Clicked="Claude_Clicked"
                        HeightRequest="80"
                        WidthRequest="250"
                        Background="#B56241"
                        TextColor="White"
                        FontSize="32"
                        FontAttributes="Bold"
                        Margin="10,20,10,20"
                        />
                    </StackLayout>


                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Background="red" VerticalOptions="EndAndExpand">
                        <Entry x:Name="userApiKeyEntry" HeightRequest="50" BackgroundColor="SeaGreen"
                           HorizontalOptions="Start"
                            IsPassword="True"
                           Placeholder="Enter api key here"
                           WidthRequest="100"
                           />
                        
                    <Button x:Name="userApiKeySubmit"
                            Text="Submit"
                            Clicked="userApiKeySubmit_Clicked"
                            HorizontalOptions="Center"
                            FontAttributes="Bold"
                            WidthRequest="80"
                            HeightRequest="50"
                            
                            />
                    </HorizontalStackLayout>


                    <Button BackgroundColor="PaleVioletRed"
                            x:Name="howtoButton"
                            Text="How to get ChatGPT API key | Youtube"
                            FontAttributes="Bold"
                            WidthRequest="300"
                            HeightRequest="50"
                            FontSize="14"
                            Clicked="HowToGetAPIKey_Clicked"
                            VerticalOptions="End"
                            />

                </controls:StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>

</ContentPage>
